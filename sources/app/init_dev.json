{
    "apps": [
        {
            "name": "scraper",
            "script": "./index.js",
            "watch": [
                "./"
            ],
            "watch_options": {
                "usePolling" : true
            },
            "min_uptime": 5000,
            "max_restarts": 2,
            "restart_delay": 1500,
            "ignore_watch": [
                "node_modules",
                "public"
            ],
            "log_date_format": "YYYY-MM-DD HH:mm Z",
        }
    ]
}